<div class="d-flex flex-row justify-content-around row row-cols-sm-2 row-cols-md-4">
    {{#each orders as |order| }}
    <div class="card mb-3" style="width: 24rem;">
        <div class="card-body">
            <h5 class="card-title">OrderID: {{order.id}}<button type="button" class="btn orderDeleteBtn" data-order_id="{{order.id}}" style="float:right;">❌</button></h5>
            <p class="card-text">Table {{order.table_number}} at
                {{format_date order.createdAt}}</p>
        </div>
        <ul class="list-group list-group-flush">
            {{#each order.order_items as |order_item|}}
            {{> order_item-details}}
            {{/each}}
        </ul>
    </div>
    {{/each}}

</div>
<script src="./js/orders.js"></script>
