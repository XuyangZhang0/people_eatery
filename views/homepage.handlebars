  {{#each menu as |category| }}
  <section class="accordions accordion-category" data-category_id={{category.id}}>
  <article class="accordion is-active">
    <div class="accordion-header toggle">
      <p>{{category.name}}</p>
    </div>
    <div class="accordion-body">
      <div class="accordion-content">

        {{#each category.menu_items as |menu_item| }}
          <div class="card" >
            <div class="card-body">
              <h5 class="card-title">{{menu_item.name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted" >{{menu_item.price}}</h6>
                  <p class="card-text">
                    {{menu_item.description}}</p> 

                  {{!-- <a href="https://via.placeholder.com/"><img src="https://via.placeholder.com/150"></a> --}}
                  
                  {{!-- <button type="button" class="btn btn-danger decrease">âž–</button>
                  <span class="quantity px-2" id="quantity-{{menu_item.id}}">0</span> --}}
                  <button type="button" class="btn btn-success addToCart" 
                  id="{{menu_item.id}}" 
                  data-category={{category.name}} 
                  data-price={{menu_item.price}} 
                  data-name={{menu_item.name}} 
                  data-id={{menu_item.id}}
                  data-ImageUrl={{menu_item.url}}>Add To Cart</button>
              </div>                            
            </div> 
            {{/each}}
  </article>
</section>
{{/each}}

